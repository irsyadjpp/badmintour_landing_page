rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin', 'superadmin']));
    }

    // 1. Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated(); // Public profiles might need adjustment
      allow write: if isOwner(userId) || isAdmin();
    }

    // 2. Orders Collection (Consolidated)
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated() || request.resource.data.userId == 'guest'; // Guests can create? Only via Server API usually.
      allow update: if isAdmin(); // Only admins update status
    }

    // 3. Jersey Orders (Legacy - Block Writes)
    match /jersey_orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if false; // Deprecated
    }

    // 4. Bookings
    match /bookings/{bookingId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId) || isAdmin();
    }

    // 5. Events (Read Only for Public)
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 6. Aggregates (Read Only)
    match /aggregates/{docId} {
      allow read: if true; // Dashboard stats might be public? Or Admin only?
      allow write: if false; // Only Server API (Admin SDK) bypasses rules
    }
    
    // Default Block
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
